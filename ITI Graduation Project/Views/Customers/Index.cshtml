@model IEnumerable<ITI_Graduation_Project.Models.Customer>

@{
    ViewData["Title"] = "Index";
    var sortField = ViewBag.SortField as string ?? "FullName";
    var sortOrder = ViewBag.SortOrder as string ?? "asc";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="mb-4" style="display:flex; gap:10px;  align-items:center; justify-content:space-between;">
    <form method="get" asp-controller="Customers" asp-action="Index" class="col-4">
        <div class="input-group  ">
            <input type="text" name="search" placeholder="Search for Something..." class="form-control" value="@ViewBag.CurrentSearch" />
            <button type="submit" class="btn btn-secondary">
                <i class="bi bi-search"></i>
            </button>
        </div>
    </form>
    <form method="get" asp-controller="Customers" asp-action="Index" class="" style="display:flex;align-items:center;gap:10px">
        <input type="hidden" name="search" value="@ViewBag.CurrentSearch" />
        <label for="sortField" class="form-label mb-0">Sort by:</label>
        <select name="sortField" id="sortField" class="form-select" style="width:auto">
            <option value="FullName" selected="@(sortField == "FullName" ? "selected" : null)">Full Name</option>
            <option value="Email" selected="@(sortField == "Email" ? "selected" : null)">Email</option>
            <option value="Phone" selected="@(sortField == "Phone" ? "selected" : null)">Phone</option>
            <option value="Address" selected="@(sortField == "Address" ? "selected" : null)">Address</option>
            <option value="TimeAdded" selected="@(sortField == "TimeAdded" ? "selected" : null)">Time added</option>
        </select>
        <div style="position:relative; display:flex; flex-direction:column; width:max-content; align-items:center;">
            <span class="text-muted" style="text-align:center; font-size:12px; position:absolute; top:-40px">press one </br> to submit sorting</span>
            <div style="display:flex; justify-content:space-between; gap:10px; width:100%">
                <button type="submit" name="sortOrder" value="asc" class="btn btn-outline-secondary">
                    ↑
                </button>
                <button type="submit" name="sortOrder" value="desc" class="btn btn-outline-secondary">
                    ↓
                </button>
            </div>
        </div>

    </form>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @if (item.Phone != null)
                    {
                        @Html.DisplayFor(modelItem => item.Phone)
                    }
                    else
                    {
                        <text>N/A</text>
                        ;
                    }
                </td>
                <td>
                    @if (item.Address != null)
                    {
                        @Html.DisplayFor(modelItem => item.Address)
                    }
                    else
                    {
                        <text>N/A</text>
                        ;
                    }
                </td>

                <td>
                    <a class="btn btn-primary px-4 py-2" style="font-size:18px;" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                        <i class="bi bi-pencil-square"></i>
                    </a> |
                    <a class="btn btn-primary px-4 py-2" style="font-size:18px;" asp-action="Details" asp-route-id="@item.Id" title="Details"> <i class="bi bi-list-ul" title="Details"></i></a> |
                    <a class="btn btn-primary px-4 py-2" style="font-size:18px;" asp-action="Delete" asp-route-id="@item.Id" title="Delete"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
