@model ITI_Graduation_Project.Models.Customer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Phone != null)
            {
                @Html.DisplayFor(model => model.Phone)
            }
            else
            {
                <text>N/A</text>
                ;
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Address != null)
            {
                @Html.DisplayFor(model => model.Address)
            }
            else
            {
                <text>N/A</text>
                ;
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<br /><br />

@if (Model.Products != null && Model.Products.Any())
{
    <h3 class="mt-4">Products bought by the client</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>For Age</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model.Products)
            {
                <tr>
                    <td> <img src="@c.ImagePath" alt="img" style="max-width:100px;max-height:100px; width:100%;height:100%; object-fit:contain;" /> </td>
                    <td><a asp-controller="Products" asp-action="Details" asp-route-id="@c.Id">@c.Name</a></td>
                    <td>@c.Description</td>
                    <td>@c.Category.Name</td>
                    <td>@c.ForAge</td>
                </tr>
            }
        </tbody>
    </table>
}
